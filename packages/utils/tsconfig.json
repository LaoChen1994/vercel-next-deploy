{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "ES5",
      "ES6",
      "DOM"
    ],
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "declaration": false,
    "target": "ES5",
    "module": "ESNext",
    "baseUrl": "./src",
    "sourceMap": false,
    "strict": true
  },
  "exclude": [
    "lib",
    "es",
    "umd",
    "src/**/examples"
  ],
}
